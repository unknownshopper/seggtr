rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Colección de encuestas
    match /surveys/{surveyId} {
      // Lectura: solo usuarios autenticados (admins)
      allow read: if request.auth != null;
      
      // Escritura: CUALQUIERA puede crear encuestas (encuestadores anónimos)
      allow create: if true;
      
      // Actualización/eliminación: solo admins autenticados
      allow update, delete: if request.auth != null && 
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Colección de usuarios (metadatos)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}